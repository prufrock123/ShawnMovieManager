<h1>Editing article</h1>
 
<%= form_for :movie, url: movie_path(@movie), method: :patch do |f| %>
 
<% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@movie.errors.count, "error") %> prohibited
        this movie from being saved:
      </h2>
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
 

<h4>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</h4>
 
<h4>
    <%= f.label :format %><br>
    <%= f.select(:format, options_for_select([['VHS', 'VHS'], ['DVD', 'DVD'], ['Streaming', 'Streaming']]), {}, {class: "form-control"}) %>
</h4>

<h4>
    <%= f.label :length %><br>
    <%= f.text_field :length %>
</h4>


<h4>
    <%= f.label :release %></h4>
    <%= f.text_field :release %>


  <h4>Rating</h4>
    <%= f.radio_button :rating, "1" %>
    <%= f.label :rating, "1", :value => 1 %>
    
        <%= f.radio_button :rating, "2" %>
    <%= f.label :rating, "2", :value => 2 %>

        <%= f.radio_button :rating, "3" %>
    <%= f.label :rating, "3", :value => 3 %>

        <%= f.radio_button :rating, "4" %>
    <%= f.label :rating, "4", :value => 4 %>

        <%= f.radio_button :rating, "5" %>
    <%= f.label :rating, "5", :value => 5 %>
    

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>