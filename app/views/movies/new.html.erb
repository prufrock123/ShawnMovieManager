<%= form_for :movie, url: movies_path, html: {:class => "form-horizontal"}  do |f| %>
<div class="form-group">
  <h4>
    <%= f.label :title, class: "col-sm-2 control-label" %>
  </h4>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
</div>
 
<div class="form-group">
  <h4>
    <%= f.label :format, class: "col-sm-2 control-label" %>
  </h4>
    <div class="col-sm-8">
    <%= f.select(:format, options_for_select([['VHS', 'VHS'], ['DVD', 'DVD'], ['Streaming', 'Streaming']]), {}, {class: "form-control"}) %>
  </div>
</div>

<div class="form-group">
  <h4>
    <%= f.label :length, class: "col-sm-2 control-label" %>
  </h4>
    <div class="col-sm-8">
<!--     <%= f.text_field :length, class: "form-control"  %> -->
      <%= f.time_select :length, prompt: {hour: "Choose hour", minute: "Choose minute"} %>
  </div>
</div>

<div class="form-group">
  <h4>
  <%= f.label :release, class: "col-sm-2 control-label" %></h4>
    <div class="col-sm-8">
    <%= f.text_field :release, class: "form-control"  %>
  </div>
</div>

<div class="form-group">
  <h4 class="col-sm-2 control-label">Rating</h4>
      <div class="col-sm-8">

    <%= f.radio_button :rating, "1" %>
    <%= f.label :rating, "1", :value => 1 %>
    
        <%= f.radio_button :rating, "2" %>
    <%= f.label :rating, "2", :value => 2 %>

        <%= f.radio_button :rating, "3" %>
    <%= f.label :rating, "3", :value => 3 %>

        <%= f.radio_button :rating, "4" %>
    <%= f.label :rating, "4", :value => 4 %>

        <%= f.radio_button :rating, "5" %>
    <%= f.label :rating, "5", :value => 5 %>
  </div>
</div>
    

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Create", class: "btn btn-default" %>
  </div>
</div>

<% end %>

<%= link_to 'Back', movies_path %>